<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Login">


    <Button
        android:id="@+id/btn_login"
        android:layout_width="424dp"
        android:layout_height="92dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="592dp"
        android:background="#2980B9"
        android:onClick="btn_login"
        android:text="Ingresar"
        android:textColor="@color/ColorPrimaryText"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="423dp"
        android:layout_height="447dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="244dp"
        android:background="#92F0EDED"
        android:outlineProvider="none"
        android:shadowColor="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_user"
        android:layout_width="290dp"
        android:layout_height="66dp"
        android:layout_marginStart="196dp"
        android:layout_marginTop="384dp"
        android:background="#ffffff"
        android:ems="10"
        android:textAlignment="center"
        android:textSize="40sp"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_pass"
        android:layout_width="288dp"
        android:layout_height="64dp"
        android:layout_marginStart="196dp"
        android:layout_marginTop="464dp"
        android:background="#ffffff"
        android:ems="10"
        android:textAlignment="center"
        android:textSize="30sp"
        android:imeOptions="actionSearch"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="106dp"
        android:layout_height="115dp"
        android:layout_marginStart="472dp"
        android:layout_marginTop="192dp"
        android:background="#00FFFFFF"
        android:onClick="quien"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pregunta" />

    <ImageView
        android:id="@+id/headerlogo2"
        android:layout_width="370dp"
        android:layout_height="77dp"
        android:layout_marginStart="228dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoheader" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tituloconteos" />


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="73dp"
        android:layout_height="66dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="384dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="78dp"
        android:layout_height="65dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="464dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pass" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="288dp"
        android:text="Ingresa el usuario y la contraseÃ±a"
        android:textColor="#2980B9"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="148dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/titulobienvenido" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="240dp"
        android:layout_height="56dp"
        android:layout_marginStart="196dp"
        android:layout_marginTop="684dp"
        android:text="Recuerdame"
        android:textColor="#2980B9"
        android:theme="@style/SCBSwitch"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>