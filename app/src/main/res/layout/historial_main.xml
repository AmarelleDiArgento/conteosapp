<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".HistorialMainActivity">

    <ImageView
        android:id="@+id/headerlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoheader"
        tools:layout_editor_absoluteX="-7dp"
        tools:layout_editor_absoluteY="-7dp" />

    <TextView
        android:id="@+id/HISTORIAL_SIEMBRA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="156dp"
        android:text="Historial de siembra"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/plantilla_busqueda"
        android:layout_width="555dp"
        android:layout_height="103dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="220dp"
        android:background="@color/ColorSecondaryText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_datapicker"
        android:layout_width="59dp"
        android:layout_height="46dp"
        android:layout_marginStart="396dp"
        android:layout_marginTop="256dp"
        android:background="#00C853"
        android:backgroundTint="#00C853"
        android:onClick="showpicker"
        android:text="textStart"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/date" />

    <TextView
        android:id="@+id/txt_fecha"
        android:layout_width="228dp"
        android:layout_height="26dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="268dp"
        android:background="@color/ColorPrimaryText"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="77dp"
        android:layout_height="66dp"
        android:layout_marginStart="464dp"
        android:layout_marginTop="248dp"
        android:backgroundTint="#0091EA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_search_white_18dp" />

    <EditText
        android:id="@+id/data_tbl"
        android:layout_width="561dp"
        android:layout_height="427dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="340dp"
        android:background="#6AB6B2B2"
        android:clickable="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <DatePicker
        android:id="@+id/date_picker"
        android:layout_width="235dp"
        android:layout_height="205dp"
        android:layout_marginStart="228dp"
        android:layout_marginTop="312dp"
        android:background="@color/ColorPrimaryText"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:endYear="2100"
        android:maxDate="12/31/2100"
        android:minDate="01/01/2000"
        android:spinnersShown="true"
        android:startYear="2000"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id='@+id/msm_selecciona_fecha'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="228dp"
        android:text="Selecciona la fecha"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tbn_Nuevo"
        android:layout_width="259dp"
        android:layout_height="64dp"
        android:layout_marginStart="188dp"
        android:layout_marginTop="792dp"
        android:background="@color/colorPrimary"
        android:onClick="intent_home"
        android:text="nuevo"
        android:textColor="@color/ColorPrimaryText"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>